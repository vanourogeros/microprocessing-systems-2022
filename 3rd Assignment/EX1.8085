	IN 10H
START:
	MVI A,10H	;fix display
	STA 08D8H 
	STA 08D9H 
	STA 08DAH
	STA 08DBH

	MVI A,1DH	;initialize interrupt
	SIM
	EI

WAIT:	PUSH D
	CALL DCD	;keep display on
	POP D
	JMP START	;get new input

INTR_ROUTINE:
	MVI H,45H
	CALL DISPLAY	;start intr routine

DISPLAY:
	MOV A,H
	MOV C,A
	ANI F0H
	RRC
	RRC
	RRC
	RRC
	STA 08DDH
	
	MOV A,C
	ANI 0FH
	STA 08DCH
	
	LXI D,08D8H
	CALL STDM	;show Display
	CALL DCD

	;DCR A
	;DCR H
	;MOV E,A 

	MVI A,FFH
	STA 3000H
	MVI B,01H	;initialize DELB
	;MVI C,11H
	;PUSH B
	CALL DELB
	
	
	ANI 00H
	STA 3000H
	;POP B
	CALL DELB
	CALL DISPLAY
	EI
	RET
END